@{
    Layout = "_Layout";
}

@using VisaApplicationAPI.ViewModels.Applicant
@model ApplicantDetailsViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Applicant Details</title>
    <!-- Include any necessary styles or scripts -->
</head>
<body>

    <h2>Applicant Details</h2>

    @using (Html.BeginForm("Action", "Applicant", FormMethod.Post))
    {
        <input type="hidden" name="Id" value="@Model.ApplicantDetailsInfoViewModel.Id" />

        <div>
            <label for="FirstName">First Name:</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.ApplicantDetailsInfoViewModel.FirstName" />
        </div>

        <div>
            <label for="LastName">Last Name:</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.ApplicantDetailsInfoViewModel.LastName" />
        </div>

        <div>
            <label for="Age">Age:</label>
            <input type="number" class="form-control" id="Age" name="Age" value="@Model.ApplicantDetailsInfoViewModel.Age" />
        </div>

        <div>
            <label for="Country">Country:</label>
            <input type="text" class="form-control" id="Country" name="Country" value="@Model.ApplicantDetailsInfoViewModel.Country" />
        </div>

        <div>
            <label for="City">City:</label>
            <input type="text" class="form-control" id="City" name="City" value="@Model.ApplicantDetailsInfoViewModel.City" />
        </div>

        <div class="form-group">
            <label for="VisaTypeId">Visa Type:</label>
            <select class="form-control" id="VisaTypeId" name="VisaTypeId">
                @foreach (var visaType in Model.VisaTypesViewModel)
                {
                    if (visaType.Id == Model.ApplicantDetailsInfoViewModel.VisaTypeId)
                    {
                        <option selected value="@visaType.Id">@visaType.Name</option>
                    }
                    else
                    {
                        <option value="@visaType.Id">@visaType.Name</option>
                    }
                }
            </select>
        </div>

        <div>
            <label class="form-check-label" for="ApplicantStatus">Application Status:</label>
            <input type="checkbox" class="form-check-input" id="ApplicantStatus" asp-for="@Model.ApplicantDetailsInfoViewModel.ApplicantStatus" name="ApplicantStatus" value="@Model.ApplicantDetailsInfoViewModel.ApplicantStatus" />
            <input type="hidden" name="Model.ApplicantDetailsInfoViewModel.ApplicantStatus">
        </div>

        <div style="text-align:right!important">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    }

</body>
</html>
